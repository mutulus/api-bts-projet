{% extends 'base.html.twig' %}

{% block title %}Hello FilmsController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Films à l'affiche</h1>
        <ul>
            {% for film in films %}
                <li>Film n°:{{ film.id }}, Titre : {{ film.titre }}, Durée : {{ film.dureeMin }} minutes</li>
                <a href="{{ path('app_film_detail', {'id': film.id}) }}">Détails</a>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
